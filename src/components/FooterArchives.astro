---
// Archives navigation section for the footer
interface Props {
  postsByYearMonth: Record<string, string>;
}

const { postsByYearMonth } = Astro.props;
---

<div>
	<nav>
		<h2>Archives</h2>
		<ul>
			{Object.entries(postsByYearMonth).map(([key, value]) =>
				<li><a rel="nofollow" href={`/${key}/`}>{value}</a></li>
			)}
		</ul>
	</nav>
</div>
